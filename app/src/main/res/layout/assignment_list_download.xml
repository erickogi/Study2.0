<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"

    android:paddingTop="6dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_status"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/roundbluebg"
                    android:text="Download"
                    android:textAllCaps="false"
                    android:textColor="@color/white"

                    />

                <!--<ImageView-->
                <!--android:id="@+id/btn_status"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->

                <!--android:backgroundTint="@color/colorAccent"-->
                <!--android:src="@drawable/ic_get_app_black_24dp" />-->


                <LinearLayout
                    android:id="@+id/assignement_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/btn_status"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp">


                    <TextView
                        android:id="@+id/list_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Unit Name"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/list_item_course_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Course"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:background="@drawable/ic_date_range_black_24dp"
                            android:backgroundTint="@color/line" />

                        <TextView
                            android:id="@+id/list_item_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:text="Friday, May 26"

                            android:textColor="@color/colorPrimaryText"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_account_circle_black_24dp"
                            android:backgroundTint="@color/line"

                            android:text="By"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/list_item_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:text="By"
                            android:textColor="@color/colorPrimaryText"

                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

